extends layout

block content
  .inner
    h2 Top #{stores.length} stores
    table.table
      thead
        td photo
        td ranking
        td name
        td reviews
        td Average rating
      tbody
        each store, index in stores
          tr
            td
              a(href=`/store/${store.slug}`)
                img(width=200 src=`/uploads/${store.photo || 'store.png'}`, alt=store.name)

            td=(index + 1)
            td: a(href=`/store/${store.slug}`)= store.name
            td= store.reviews.length
            td #{Number.isInteger(store.averageRating) ? store.averageRating : store.averageRating.toFixed(1)}/5
